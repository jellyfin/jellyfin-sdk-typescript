{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node16",
    "declaration": true,
    "noImplicitAny": true,
    "outDir": "lib"
  },
  "typedocOptions": {
    "entryPoints": [
      "./src/index.ts",
      "./src/generated-client/index.ts",
      "./src/models/api/index.ts"
    ],
    "out": "docs"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__",
    "**/__helpers__"
  ]
}
