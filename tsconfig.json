{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2015",
    "moduleResolution": "Node",
    "declaration": true,
    "noImplicitAny": true,
    "outDir": "lib"
  },
  "typedocOptions": {
    "entryPoints": [
      "src/index.ts",
      "src/generated-client/index.ts",
      "src/models/api/index.ts",
      "src/utils/api/index.ts"
    ],
    "out": "docs",
    "projectDocuments": [
      "CHANGELOG.md"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__",
    "**/__helpers__"
  ]
}
